<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springboot.mapper.SystemConfigMapper">

    <resultMap id="SystemConfigResultMap" type="com.example.springboot.entity.SystemConfig">
        <id property="id" column="id"/>
        <result property="configKey" column="config_key"/>
        <result property="configValue" column="config_value"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="findAll" resultMap="SystemConfigResultMap">
        SELECT * FROM system_config ORDER BY id
    </select>

    <select id="findById" parameterType="int" resultMap="SystemConfigResultMap">
        SELECT * FROM system_config WHERE id = #{id}
    </select>

    <select id="findByKey" parameterType="string" resultMap="SystemConfigResultMap">
        SELECT * FROM system_config WHERE config_key = #{configKey}
    </select>

    <insert id="insert" parameterType="com.example.springboot.entity.SystemConfig">
        INSERT INTO system_config(config_key, config_value, description, create_time, update_time)
        VALUES(#{configKey}, #{configValue}, #{description}, NOW(), NOW())
    </insert>

    <update id="updateByKey" parameterType="com.example.springboot.entity.SystemConfig">
        UPDATE system_config 
        SET config_value = #{configValue}, 
            description = #{description},
            update_time = NOW()
        WHERE config_key = #{configKey}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM system_config WHERE id = #{id}
    </delete>

    <delete id="deleteByKey" parameterType="string">
        DELETE FROM system_config WHERE config_key = #{configKey}
    </delete>

</mapper> 