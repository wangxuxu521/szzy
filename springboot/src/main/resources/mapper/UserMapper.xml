<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springboot.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.springboot.entity.User">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="role" column="role"/>
        <result property="createTime" column="create_time"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="avatar" column="avatar"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="findById" parameterType="int" resultMap="UserResultMap">
        SELECT * FROM user WHERE user_id = #{userId}
    </select>

    <select id="findAll" resultMap="UserResultMap">
        SELECT * FROM user ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.example.springboot.entity.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO user(username, password, name, role, create_time)
        VALUES(#{username}, #{password}, #{name}, #{role}, NOW())
    </insert>

    <update id="update" parameterType="com.example.springboot.entity.User">
        UPDATE user SET username=#{username}, password=#{password}, name=#{name}, role=#{role} WHERE user_id=#{userId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM user WHERE user_id=#{userId}
    </delete>

    <select id="findByUsername" parameterType="string" resultMap="UserResultMap">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="findByRole" resultMap="UserResultMap">
        SELECT * FROM user WHERE role = #{role}
    </select>

    <update id="updateLastLoginTime" parameterType="com.example.springboot.entity.User">
        UPDATE user SET last_login_time=#{lastLoginTime} WHERE user_id=#{userId}
    </update>

    <!-- 根据ID列表查询用户 -->
    <select id="findByIds" resultMap="UserResultMap">
        SELECT * FROM user 
        WHERE user_id IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </select>

</mapper>