<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springboot.mapper.TypeMapper">

    <resultMap id="TypeResultMap" type="com.example.springboot.entity.Type">
        <id property="typeId" column="type_id"/>
        <result property="typeName" column="type_name"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="findById" parameterType="int" resultMap="TypeResultMap">
        SELECT * FROM type WHERE type_id = #{typeId}
    </select>

    <select id="findAll" resultMap="TypeResultMap">
        SELECT * FROM type WHERE status = 1 ORDER BY type_id
    </select>
    
    <select id="checkTypeNameExists" resultType="int">
        SELECT COUNT(*) FROM type WHERE type_name = #{typeName}
    </select>

    <insert id="insert" parameterType="com.example.springboot.entity.Type" useGeneratedKeys="true" keyProperty="typeId">
        INSERT INTO type(
            type_name, description, create_time, status
        )
        VALUES(
            #{typeName}, #{description}, NOW(), #{status}
        )
    </insert>

    <update id="update" parameterType="com.example.springboot.entity.Type">
        UPDATE type 
        SET type_name = #{typeName},
            description = #{description},
            status = #{status}
        WHERE type_id = #{typeId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM type WHERE type_id = #{typeId}
    </delete>

</mapper> 